<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    /* Stili specifici per la pagina di login */
    .auth-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    
    .auth-header {
      text-align: center;
      padding: 2rem 0;
      animation: fadeInDown 0.8s ease;
    }
    
    .auth-header h1 {
      margin: 0;
      font-size: 3.5rem;
      letter-spacing: 2px;
      color: #ff4757;
      font-weight: 700;
    }
    
    .auth-header p {
      margin-top: 0.5rem;
      font-size: 1.2rem;
      opacity: 0.9;
      color: #555;
    }
    
    body.dark-theme .auth-header p {
      color: #bbb;
    }
    
    .auth-content {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem 0;
    }
    
    .login-form {
      width: 100%;
      max-width: 450px;
      background-color: #ffffff;
      border-radius: 12px;
      padding: 30px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
      animation: fadeIn 0.8s ease;
      transition: all 0.3s ease;
    }
    
    body.dark-theme .login-form {
      background-color: #1e1e1e;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }
    
    .login-form h2 {
      text-align: center;
      margin-bottom: 25px;
      color: #333;
      font-size: 1.8rem;
      font-weight: 600;
    }
    
    body.dark-theme .login-form h2 {
      color: #f1f1f1;
    }
    
    .error-message {
      background-color: rgba(255, 71, 87, 0.1);
      color: #ff4757;
      padding: 12px 15px;
      border-radius: 8px;
      margin-bottom: 20px;
      font-size: 0.9rem;
      animation: shake 0.5s ease;
    }
    
    .form-group {
      margin-bottom: 20px;
      opacity: 0;
      transform: translateY(10px);
      transition: all 0.3s ease;
    }
    
    .form-group.fade-in {
      opacity: 1;
      transform: translateY(0);
    }
    
    .form-group label {
      display: block;
      margin-bottom: 8px;
      font-weight: 500;
      color: #555;
      font-size: 0.95rem;
    }
    
    body.dark-theme .form-group label {
      color: #bbb;
    }
    
    .form-group input {
      width: 100%;
      padding: 12px 15px;
      border: 1px solid #ddd;
      border-radius: 8px;
      background-color: #f9f9f9;
      font-size: 1rem;
      color: #333;
      transition: all 0.3s ease;
    }
    
    body.dark-theme .form-group input {
      border-color: #444;
      background-color: #2a2a2a;
      color: #f1f1f1;
    }
    
    .form-group input:focus {
      outline: none;
      border-color: #ff4757;
      box-shadow: 0 0 0 2px rgba(255, 71, 87, 0.2);
    }
    
    .btn {
      display: inline-block;
      padding: 12px 24px;
      background-color: #ff4757;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      width: 100%;
      text-align: center;
    }
    
    .btn:hover {
      background-color: #ff2c40;
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(255, 71, 87, 0.3);
    }
    
    .btn.pulse {
      animation: pulse 0.5s ease;
    }
    
    .form-footer {
      text-align: center;
      margin-top: 25px;
      color: #777;
      font-size: 0.95rem;
    }
    
    body.dark-theme .form-footer {
      color: #aaa;
    }
    
    .form-footer a {
      color: #ff4757;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    
    .form-footer a:hover {
      text-decoration: underline;
    }
    
    .auth-footer {
      text-align: center;
      padding: 1.5rem 0;
      color: #777;
      font-size: 0.9rem;
      animation: fadeInUp 0.8s ease;
    }
    
    body.dark-theme .auth-footer {
      color: #aaa;
    }
    
    .footer-links {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 10px;
    }
    
    .footer-links a {
      color: #777;
      text-decoration: none;
      transition: all 0.3s ease;
    }
    
    body.dark-theme .footer-links a {
      color: #aaa;
    }
    
    .footer-links a:hover {
      color: #ff4757;
    }
    
    /* Animazioni */
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    @keyframes fadeInDown {
      from { 
        opacity: 0; 
        transform: translateY(-20px);
      }
      to { 
        opacity: 1; 
        transform: translateY(0);
      }
    }
    
    @keyframes fadeInUp {
      from { 
        opacity: 0; 
        transform: translateY(20px);
      }
      to { 
        opacity: 1; 
        transform: translateY(0);
      }
    }
    
    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
      20%, 40%, 60%, 80% { transform: translateX(5px); }
    }
    
    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.05); }
      100% { transform: scale(1); }
    }
  </style>
</head>
<body>
  <button id="theme-toggle" class="theme-toggle">
    <i class="fas fa-moon"></i>
  </button>
  
  <div class="auth-container">
    <header class="auth-header">
      <h1>SEE</h1>
      <p>Condividi i tuoi momenti con il mondo</p>
    </header>
    
    <main class="auth-content">
      <div class="login-form">
        <h2>Accedi a SEE</h2>
        
        <% if (error) { %>
          <div class="error-message">
            <i class="fas fa-exclamation-circle"></i> <%= error %>
          </div>
        <% } %>
        
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="username"><i class="fas fa-user"></i> Username</label>
            <input type="text" id="username" name="username" placeholder="Inserisci il tuo username" required>
          </div>
          
          <div class="form-group">
            <label for="password"><i class="fas fa-lock"></i> Password</label>
            <input type="password" id="password" name="password" placeholder="Inserisci la tua password" required>
          </div>
          
          <button type="submit" class="btn btn-primary">Accedi <i class="fas fa-sign-in-alt"></i></button>
        </form>
        
        <div class="form-footer">
          <p>Non hai un account? <a href="/register">Registrati</a></p>
        </div>
      </div>
    </main>
    
    <footer class="auth-footer">
      <p>&copy; <%= new Date().getFullYear() %> SEE. Tutti i diritti riservati.</p>
      <div class="footer-links">
        <a href="/about">Chi siamo</a>
        <a href="/privacy">Privacy</a>
        <a href="/terms">Termini</a>
      </div>
    </footer>
  </div>
  
  <script src="/js/main.js"></script>
  <script src="/js/session.js"></script>
  <script>
    // Aggiungi cookie per la persistenza della sessione
    document.addEventListener('DOMContentLoaded', function() {
      // Animazione per i form
      const formGroups = document.querySelectorAll('.form-group');
      formGroups.forEach((group, index) => {
        setTimeout(() => {
          group.classList.add('fade-in');
        }, 100 * index);
      });
      
      // Gestione del form di login
      const loginForm = document.querySelector('form');
      if (loginForm) {
        loginForm.addEventListener('submit', function(e) {
          const submitBtn = this.querySelector('button[type="submit"]');
          submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Accesso in corso...';
          submitBtn.disabled = true;
          // Il form continuer√† con il submit normale
        });
      }
    });
  </script>
</body>
</html>